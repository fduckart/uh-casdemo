<tiles-definitions>
    
    <definition name="simpleLayout"      template="/WEB-INF/layouts/simple.jsp"/>
                
    <definition name="baseSimple"  extends="simpleLayout">
        <put-attribute name="header" value="/WEB-INF/layouts/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/layouts/footer.jsp" />
    </definition>
    
    <definition name="attributes" extends="baseSimple">
        <put-attribute name="body" value="/WEB-INF/views/attributes/attributes.jsp" />        
    </definition>
    
    <definition name="faq" extends="baseSimple">
        <put-attribute name="body" value="/WEB-INF/views/about/faq.jsp" />
    </definition>
    
    <definition name="contact" extends="baseSimple">
        <put-attribute name="body" value="/WEB-INF/views/contact/contact.jsp" />
    </definition>
        
    <definition name="denied" extends="baseSimple">
        <put-attribute name="body" value="/WEB-INF/views/gate/denied.jsp" />
    </definition>
        
    <definition name="gate" extends="baseSimple">
        <put-attribute name="body" value="/WEB-INF/views/gate/gate.jsp" />
    </definition>
    
    <definition name="actions/list" extends="baseSimple">
        <put-attribute name="body" value="/WEB-INF/views/actions/actions.jsp" />
    </definition>
    
    <definition name="admin" extends="baseSimple">
        <put-attribute name="body" value="/WEB-INF/views/admin/admin.jsp" />
    </definition>
    
</tiles-definitions>
